<h1><%= @departments.id ? 'Edit Department' : 'Create Department' %></h1>
<hr />
<%= form_for @departments do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.label :address %>
  <%= f.text_field :address, required: true, autofocus: true %>
  <%= f.label :phone %>
  <%= f.text_field :phone, required: true, autofocus: true %>

  <%= f.submit %>
<% end %>